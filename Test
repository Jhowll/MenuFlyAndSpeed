-- Fun√ß√£o de anima√ß√£o
local function animateButton(button)
    local originalSize = button.Size
    local tweenInfo = TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    
    local shrinkTween = TweenService:Create(button, tweenInfo, {Size = UDim2.new(originalSize.X.Scale * 0.95, originalSize.X.Offset * 0.95, originalSize.Y.Scale * 0.95, originalSize.Y.Offset * 0.95)})
    local expandTween = TweenService:Create(button, tweenInfo, {Size = originalSize})
    
    shrinkTween:Play()
    shrinkTween.Completed:Connect(function()
        expandTween:Play()
    end)
end

-- Anima√ß√£o de entrada
MainFrame.Position = UDim2.new(0.5, -200, 1.5, 0)
Shadow.Position = UDim2.new(0.5, -205, 1.5, 0)

local entranceTween = TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Position = UDim2.new(0.5, -200, 0.5, -125)})
local shadowTween = TweenService:Create(Shadow, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Position = UDim2.new(0.5, -205, 0.5, -130)})

entranceTween:Play()
shadowTween:Play()

-- Eventos dos bot√µes
CloseButton.MouseButton1Click:Connect(function()
    animateButton(CloseButton)
    wait(0.1)
    ScreenGui:Destroy()
end)

CopyButton.MouseButton1Click:Connect(function()
    animateButton(CopyButton)
    setclipboard("https://tuxmain.rf.gd/tuxcurtor/view.php?id=irYUaMLl")
    StatusLabel.Text = "‚úÖ Link copiado para a √°rea de transfer√™ncia!"
    StatusLabel.TextColor3 = Color3.fromRGB(34, 197, 94)
    
    wait(3)
    StatusLabel.Text = "üí° Cole a key acima e clique em verificar"
    StatusLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
end)

VerifyButton.MouseButton1Click:Connect(function()
    animateButton(VerifyButton)
    
    if KeyInput.Text == "123" then
        StatusLabel.Text = "‚úÖ Key v√°lida! Carregando script..."
        StatusLabel.TextColor3 = Color3.fromRGB(34, 197, 94)
        
        -- Anima√ß√£o de sa√≠da
        local exitTween = TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Position = UDim2.new(0.5, -200, -1, 0)})
        local shadowExitTween = TweenService:Create(Shadow, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Position = UDim2.new(0.5, -205, -1, 0)})
        
        exitTween:Play()
        shadowExitTween:Play()
        
        exitTween.Completed:Connect(function()
            ScreenGui:Destroy()
        end)
    else
        StatusLabel.Text = "‚ùå Key incorreta! Tente novamente"
        StatusLabel.TextColor3 = Color3.fromRGB(239, 68, 68)
        KeyInput.Text = ""
        
        -- Shake animation para erro
        local originalPos = MainFrame.Position
        local shakeInfo = TweenInfo.new(0.05, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut)
        
        local shake1 = TweenService:Create(MainFrame, shakeInfo, {Position = UDim2.new(originalPos.X.Scale, originalPos.X.Offset + 10, originalPos.Y.Scale, originalPos.Y.Offset)})
        local shake2 = TweenService:Create(MainFrame, shakeInfo, {Position = UDim2.new(originalPos.X.Scale, originalPos.X.Offset - 10, originalPos.Y.Scale, originalPos.Y.Offset)})
        local shake3 = TweenService:Create(MainFrame, shakeInfo, {Position = originalPos})
        
        shake1:Play()
        shake1.Completed:Connect(function()
            shake2:Play()
            shake2.Completed:Connect(function()
                shake3:Play()
            end)
        end)
        
        wait(3)
        StatusLabel.Text = "üí° Cole a key acima e clique em verificar"
        StatusLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
    end
end)

-- Efeito hover nos bot√µes
local function addHoverEffect(button, hoverColor, originalColor)
    button.MouseEnter:Connect(function()
        local hoverTween = TweenService:Create(button, TweenInfo.new(0.2, Enum.EasingStyle.Quad), {BackgroundColor3 = hoverColor})
        hoverTween:Play()
    end)
    
    button.MouseLeave:Connect(function()
        local leaveTween = TweenService:Create(button, TweenInfo.new(0.2, Enum.EasingStyle.Quad), {BackgroundColor3 = originalColor})
        leaveTween:Play()
    end)
end

addHoverEffect(VerifyButton, Color3.fromRGB(22, 163, 74), Color3.fromRGB(34, 197, 94))
addHoverEffect(CopyButton, Color3.fromRGB(37, 99, 235), Color3.fromRGB(59, 130, 246))
addHoverEffect(CloseButton, Color3.fromRGB(220, 38, 38), Color3.fromRGB(255, 85, 85))

-- Efeito focus no input
KeyInput.Focused:Connect(function()
    local focusTween = TweenService:Create(InputStroke, TweenInfo.new(0.2, Enum.EasingStyle.Quad), {Color = Color3.fromRGB(59, 130, 246)})
    focusTween:Play()
end)

KeyInput.FocusLost:Connect(function()
    local unfocusTween = TweenService:Create(InputStroke, TweenInfo.new(0.2, Enum.EasingStyle.Quad), {Color = Color3.fromRGB(60, 60, 70)})
    unfocusTween:Play()
end)
